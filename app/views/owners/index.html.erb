<div class="container p-6">
  <h1 class="mb-6 has-text-black is-size-1">All Owners</h1>
  <table class="table owners-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Number of Dogs</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td>
            <%= owner.name %>
          </td>

          <td>
            <%= owner.phone_number %>
          </td>

          <td>
            <%= owner.dogs.count %>
          </td>

          <td>
            <%= link_to "Show Dogs", owner_path(owner), class: "button is-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render 'share/pagination', collection: @owners %>
</div>